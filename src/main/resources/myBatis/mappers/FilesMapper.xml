<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="FilesMapper">

	<insert id="setWrite" parameterType="FilesDTO">
		INSERT INTO FILES(FNUM, NUM, FNAME, ONAME) VALUES(files_seq.nextval, #{num}, #{fname}, #{oname})
	</insert>
	
	<update id="setUpdate" parameterType="FilesDTO">
		UPDATE FILES SET FNAME = #{fname}, ONAME = #{oname} WHERE FNUM = #{fnum}
	</update>
	
	<select id="getList" parameterType="Integer" resultType="FilesDTO">
		SELECT * FROM FILES WHERE NUM=#{num}
	</select>
	
	<delete id="setDelete" parameterType="Integer">
		DELETE FILES WHERE FNUM=#{fnum}
	</delete>
	
	<delete id="setDeleteAll" parameterType="Integer">
		DELETE FILES WHERE NUM=#{num}
	</delete>

