<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="CommuMapper">

	<select id="getNum" resultType="Integer">
		SELECT QNA_SEQ.NEXTVAL FROM DUAL
	</select>
	<insert id="setWrite" parameterType="CommuDTO">
		INSERT INTO QNA(NUM, TITLE, WRITER, CONTENTS, REF, STEP, DEPTH, REG_DATE, HIT)
		VALUES(#{num}, #{title}, #{writer}, #{contents}, #{num},0,0,SYSDATE,0)
	</insert>
	<update id="setUpdate" parameterType="CommuDTO">
		UPDATE QNA SET TITLE = #{title}, CONTENTS = #{contents} WHERE NUM = #{num}
	</update>
	<delete id="setDelete" parameterType="String">
		DELETE QNA WHERE NUM = #{num}
	</delete>
	<select id="getSelect" parameterType="String" resultMap="commuResult">
		SELECT * FROM QNA FULL JOIN FILES USING(NUM) WHERE NUM = #{num}
	</select>
	<select id="getCount" resultType="Integer" parameterType="PageMaker">
		SELECT COUNT(NUM) FROM QNA WHERE 
		<choose>
			<when test="kind = 1">
				TITLE
			</when>
			<when test="kind = 2">
				WRITER
			</when>
			<when test="kind = 3">
				CONTENTS
			</when>
			<otherwise>
				TITLE
			</otherwise>
		</choose>
			LIKE '%'||#{search}||'%'
	</select>
	<select id="getList" parameterType="PageMaker" resultMap="commuResult">
		SELECT * FROM
		(SELECT ROWNUM R, Q.* FROM
		(SELECT * FROM QNA WHERE 
		<choose>
			<when test="kind = 1">
				TITLE
			</when>
			<when test="kind = 2">
				WRITER
			</when>
			<when test="kind = 3">
				CONTENTS
			</when>
			<otherwise>
				TITLE
			</otherwise>
		</choose>
			LIKE '%'||#{search}||'%'
			ORDER BY REF DESC, STEP ASC) Q)
			WHERE R BETWEEN #{startRow} AND #{lastRow}
	</select>
	<resultMap type="CommuDTO" id="commuResult">
		<id column="num" property="num"/>
		<result column="title" property="title"/>
		<result column="writer" property="writer"/>
		<result column="contents" property="reg_date"/>
		<result column="reg_date" property="reg_date"/>
		<result column="step" property="step"/>
		<result column="ref" property="ref"/>
		<result column="depth" property="depth"/>
		<result column="hit" property="hit"/>
		<collection property="fileDTOs" javaType="List" ofType="FileDTO">
			<id column="fnum" property="fnum"/>
			<result column="num" property="num"/>
			<result column="fname" property="fname"/>
			<result column="oname" property="oname"/>
		</collection>
	</resultMap>
		
</mapper>